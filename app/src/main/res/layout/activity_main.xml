<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.beast.tictactoe.xo.MainActivity">

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b5"
        android:layout_margin="0dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b1"
        android:layout_margin="0dp"
        android:layout_above="@+id/b5"
        android:layout_toLeftOf="@+id/b5"
        android:layout_toStartOf="@+id/b5" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b3"
        android:layout_margin="0dp"
        android:layout_above="@+id/b5"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b2"
        android:layout_margin="0dp"
        android:layout_above="@+id/b5"
        android:layout_toLeftOf="@+id/b3"
        android:layout_toRightOf="@+id/b1"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b6"
        android:layout_margin="0dp"
        android:layout_below="@+id/b3"
        android:layout_toRightOf="@+id/b5"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b7"
        android:layout_margin="0dp"
        android:layout_below="@+id/b5"
        android:layout_toLeftOf="@+id/b5"
        android:layout_toStartOf="@+id/b5" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b9"
        android:layout_margin="0dp"
        android:layout_below="@+id/b5"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b8"
        android:layout_margin="0dp"
        android:layout_below="@+id/b5"
        android:layout_toLeftOf="@+id/b9"
        android:layout_toRightOf="@+id/b7"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/b4"
        android:layout_margin="0dp"
        android:layout_below="@+id/b1"
        android:layout_alignLeft="@+id/b1"
        android:layout_alignStart="@+id/b1" />

    <TextView
        android:text="X:"
        android:layout_width="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:layout_height="30dp" />

    <TextView
        android:layout_above="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:id="@+id/xscore"
        android:layout_width="40dp"
        android:textSize="25dp"
        android:layout_height="30dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:id="@+id/yscore"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView2" />

    <TextView
        android:text="O:"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="12dp" />
</RelativeLayout>
