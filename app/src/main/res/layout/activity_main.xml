<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context="com.beast.tictactoe.xo.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:background="#1A237E">

        <TextView
            android:layout_height="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/xscore"
            android:layout_width="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/yscore"
            android:layout_below="@+id/xscore"
            android:layout_alignLeft="@+id/xscore"
            android:layout_alignStart="@+id/xscore"
            android:textSize="25dp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/yscore"
            android:layout_toLeftOf="@+id/xscore"
            android:layout_toStartOf="@+id/xscore"
            android:id="@+id/textView4"
            android:text="X:"
            android:textSize="25dp"
            android:textColor="@android:color/white" />

        <TextView
            android:text="Y:"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/yscore"
            android:layout_toLeftOf="@+id/yscore"
            android:layout_toStartOf="@+id/yscore"
            android:id="@+id/textView5"
            android:textSize="25dp"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:weightSum="3"
        android:layout_height="0dp"
        android:background="@android:color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:weightSum="3"
            android:padding="1dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/empty"
                android:id="@+id/b1"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/empty"
                android:id="@+id/b2"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/empty"
                android:id="@+id/b3"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:weightSum="3"
            android:padding="1dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/empty"
                android:id="@+id/b4"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/empty"
                android:id="@+id/b5"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/empty"
                android:id="@+id/b6"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:weightSum="3"
            android:padding="1dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/empty"
                android:id="@+id/b7"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/empty"
                android:id="@+id/b8"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/empty"
                android:id="@+id/b9"
                android:layout_weight="1"
                android:layout_marginLeft="1dp"
                android:scaleType="fitXY" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
